{
  "name": "serves-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:vercel": "next build",
    "build:analyze": "cross-env ANALYZE=true npm run build",
    "build:production": "npm run clean && npm run validate && npm run test:unit && npm run build && npm run optimize",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next out node_modules/.cache",
    "test": "vitest --run",
    "test:unit": "vitest --run src/components/ui/__tests__ src/test/simple.test.ts",
    "test:integration": "vitest --run src/test/integration",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:accessibility": "axe-playwright",
    "validate": "node scripts/validate-system.js",
    "optimize": "node scripts/optimize-bundle.js",
    "production-check": "npm run validate && npm run test && npm run build && npm run optimize",
    "precommit": "npm run lint && npm run type-check && npm run test",

    "postbuild": "echo 'Build completed successfully!'",
    "deploy:vercel": "vercel --prod",
    "deploy:production": "npm run production-check && npm run deploy:vercel",
    "health-check": "curl -f http://localhost:3000/api/health || exit 1",
    "monitor:logs": "tail -f .next/server.log",
    "monitor:performance": "node scripts/performance-monitor.js"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "critters": "^0.0.23",
    "next": "15.5.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "swr": "^2.3.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.49.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.10.2",
    "axe-playwright": "^2.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.5.1",
    "jsdom": "^25.0.1",
    "msw": "^2.6.8",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.3.0",
    "typescript": "^5",
    "vitest": "^2.1.8",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
